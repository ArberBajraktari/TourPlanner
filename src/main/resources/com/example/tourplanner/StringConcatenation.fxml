<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import java.net.URL?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.tourplanner.StringConcatenationController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label> Left String </Label>
    <TextField fx:id="LeftStringTextField"></TextField>

    <Label> Right String </Label>
    <TextField fx:id="RightStringTextField"></TextField>

    <!-- e shkru emrin e buttonit ne attribute (per shkak te gjuhve te shumta: eng, gjerm, etj-->
    <Button styleClass="mainButton" text="Concatenate" onMouseClicked="#concatenateStrings"></Button>

    <Label fx:id="StringConcatenationResultLabel"></Label>

</VBox>
